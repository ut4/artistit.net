<%- include('common/layout-header', {title: 'Uusi artisti'}); %>
<form class="create-artist-view" onSubmit="handleFormSubmit(event)">
    <header style="<%- `background-image:url('${staticBaseUrl}user-images/-LkbhF4iOa032wUATTzV')` %>">
        <div>
            <input id="i-name" class="head-input" placeholder="Nimi" autofocus/>
            <div class="error"></div>
        </div>
        <div>
            <textarea id="i-tagline" class="tagline-input" placeholder="Tagline"></textarea>
            <div class="error"></div>
        </div>
    </header>
    <section class="main">
        <div class="error"></div>
        <%- include('artist/widget-designer', {widgets: null, readTemplate}) %>
        <%- include('common/form-buttons', {submitText: 'Luo artistisivu'}); %>
    </section>
</form>
<%- include('common/layout-footer'); %>